<Window x:Class="WPFShapeCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFShapeCanvas"
        mc:Ignorable="d"
        Title="Shape Canvas Game" Height="450" Width="800">
    <DockPanel Width="800">
        <Canvas x:Name="PlayCanvas" HorizontalAlignment="Left" Width="520" Background="#FFFFF5B8" MouseLeftButtonUp="PlayCanvas_MouseLeftButtonUp"/>
        <Button x:Name="ClearButton" Content="Clear" Width="Auto" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,75,0,0" Click="ClearButton_Click"/>
    </DockPanel>
</Window>
