<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.SecondaryController">
    <children>
        <Label fx:id="timerLabel" text="Timer Would Goes Here" />
        <Label fx:id="resultsLabel" text="" />
        <HBox>
            <Button fx:id="MoleButton1" text="1 Mole" />
            <Button fx:id="MoleButton2" text="2 Moles" />
            <Button fx:id="MoleButton3" text="3 Moles" />
        </HBox>
        <HBox>
            <Button fx:id="MoleButton4" text="4 Moles" />
            <Button fx:id="MoleButton5" text="5 Moles" />
            <Button fx:id="MoleButton6" text="6 Moles" />
        </HBox>
        <HBox>
            <Button fx:id="MoleButton7" text="7 Moles" />
            <Button fx:id="MoleButton8" text="8 Moles" />
            <Button fx:id="MoleButton9" text="9 Moles" />
        </HBox>
        <Button fx:id="StartButton" text="Start Game" onAction="#startGame" />
        <Button fx:id="secondaryButton" text="Switch to Primary View" onAction="#switchToPrimary" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
